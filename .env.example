# App
PORT=8080
NODE_ENV=production

# JWT
JWT_SECRET=change-me-super-secret
JWT_EXPIRES=15m

# Password
BCRYPT_SALT_ROUNDS=12

# Database (choose one approach)
# 1) Single URL:
# DATABASE_URL=postgres://USER:PASS@HOST:PORT/DBNAME
# 2) Discrete vars:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sindpan_auth
# Optional SSL (true/false). For managed providers, often true.
DB_SSL=false

# Admin bootstrap (optional)
ADMIN_EMAIL=admin@sindpan.org.br
ADMIN_PASSWORD=admin123
